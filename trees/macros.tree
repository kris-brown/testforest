% Declare a binary relation fact
\def\relation[r][x][y]{
  \execute\datalog{
    \r @{\x} @{\y} -:
  }
}

\def\rel/example{example} % `example a b` means `a` is an example of `b`

\def\example[x][y]{\relation{\rel/example}{\x}{\y}}

